<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkGray"
    tools:context=".fragments.SettingFragment">

    <ImageView
        android:id="@+id/imgBackToHome"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginVertical="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/left_arrow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatarProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:shapeAppearanceOverlay="@style/circleImage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_toRightOf="@+id/ivAvatarProfile">

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="elsieeee"
                android:textColor="#F5F5FA"
                android:textSize="@dimen/_20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/_4dp"/>
            <TextView
                android:id="@+id/tvProfileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0377490223 ãƒ» lamnhutrinh@gmail.com"
                android:fontFamily="sans-serif-light"
                android:textColor="#DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp">

            <TextView
                android:id="@+id/tvEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:text="Edit"
                android:textSize="@dimen/_12sp"
                android:textColor="#fa586a"
                android:paddingVertical="@dimen/_4dp"/>
            <TextView
                android:id="@+id/tvUploadSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:text="Upload song"
                android:textSize="@dimen/_12sp"
                android:textColor="#fa586a"
                android:paddingVertical="@dimen/_4dp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>